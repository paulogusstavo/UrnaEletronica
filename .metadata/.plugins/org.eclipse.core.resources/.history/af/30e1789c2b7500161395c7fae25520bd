import java.util.*;

public class Principal {

	public static void main(String[] args) 
	{	
		Scanner lerTeclado = new Scanner(System.in);
		Impressao menu = new Impressao();
		Urna urna = new Urna();

		menu.tipoConta();
		byte selecao = lerTeclado.nextByte();
		
		//-----------------------------------------------------------------
		while (selecao != 0) {
			switch (selecao) 
			{
			case 0:
				System.out.println("------------------------------");
				System.out.print("O programa foi encerrado!");
				break;
			case 1:
				System.out.print("Digite sua senha:");
				int senhaTemp = lerTeclado.nextInt();
				
				if (urna.checarSenha(senhaTemp)) {
					menu.administrativo();
					byte opcao = lerTeclado.nextByte();
					
					switch (opcao) {
					case 0:
						selecao = 0;
						break;
					case 1:
						break;
					}
					
				}			
				
				//TODO:Insert the system in here.
				while (senhaTemp != 90) {
					if (senhaTemp == 0)
							break;
					System.out.println("Senha inválida! Tente novamente.");
					System.out.print("Semnha: ");
				}
				
				break;
			case 2:
				
				break;
				
			default: 
				System.out.print("Opção inválida, digite uma opção:");
				break;
			}
		}
	}

}