import java.util.*;

public class Principal {
	private int senha;
	private Impressao impresssao;

//-------------------------------------------------------------------------
	private static void inicializador () {
		Impressao menu = new Impressao();
	}
//-------------------------------------------------------------------------
	private boolean checarSenha (int senha) {	
		if (this.senha == senha) {
			return true;
		}
		else
			return false;
	}
//-------------------------------------------------------------------------	
	//MARK: Main
	public static void main(String[] args) 
	{	
		Scanner lerTeclado = new Scanner(System.in);
		Impressao menu = new Impressao();

		menu.tipoConta();
		byte selecao = lerTeclado.nextByte();
		
		//-----------------------------------------------------------------
		switch (selecao) 
		{
		case 0:
			System.out.println("------------------------------");
			System.out.print("O programa foi encerrado!");
			break;
		case 1:
			System.out.print("Digite sua senha:");
			int senhaTemp = lerTeclado.nextInt();
			
			if (checarSenha(senhaTemp))
				menu.administrativo();
			else {
				menu.senhaInvalida();
				senhaTemp = lerTeclado.nextInt();
				if (senhaTemp == 0)
					selecao = 0;
			}
			
			
			//TODO:Insert the system in here.
			while (senhaTemp != 90) {
				if (senhaTemp == 0)
						break;
				System.out.println("Senha inválida! Tente novamente.");
				System.out.print("Semnha: ");
			}
			
			break;
		case 2:
			
			break;
			
		default: 
			System.out.print("Opção inválida, digite uma opção:");
			break;
		
		}

	}

}