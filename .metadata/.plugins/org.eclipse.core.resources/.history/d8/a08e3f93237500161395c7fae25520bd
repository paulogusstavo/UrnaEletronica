import java.util.*;

public class Principal {
	private int senha=0;
	
	private void impressaoMenu () {
		
	}
	
	private boolean checarSenha (int senha) {
		if (senha == 0) {
			System.out.println("----------1°ACESSO----------");
			System.out.print("Defina uma senha:");
			//TODO: System IN
			
			this.senha = senha;
			return true;
		}
		else if (this.senha == senha) {
			return true;
		}
	
	}
	
	private void setSenha (int senha) { this.senha = senha; }
	
	public static void main(String[] args) 
	{
		byte selecao=0;
		
		//Impressão Menu
		System.out.println("----------SELECIONE O TIPO DE CONTA----------");
		System.out.println("1.Adminstrativo");
		System.out.println("2.Usuário");
		System.out.println("0.Encerrar");
		
		//TODO: Colocar system IN
		
		switch (selecao) {
		case 0:
			System.out.print("O programa foi encerrado!");
			break;
		case 1:
			int senhaTemp;
			checarSenha (senhaTemp);
			//TODO:Insert the system in here.
			while (senhaTemp != senha) {
				if (senhaTemp == 0)
						break;
				System.out.println("Senha inválida! Tente novamente.");
				System.out.print("Semnha: ");
			}
			System.out.println("----------ADMINISTRATIVO----------");
			System.out.println("2.Cadastro de Candidato");
			System.out.println("1.Cadastro de Eleitor");
			System.out.println("3.Relatório");
			break;
		case 2:
			System.out.println("----------VOTAÇÃO----------");
			System.out.print("Informe a zona de votação:");
			System.out.print("Informe a seccao de votação:");
			System.out.println("");
			break;
			
		default: 
			System.out.print("Opção inválida, digite uma opção:");
			break;
		
		}

	}

}