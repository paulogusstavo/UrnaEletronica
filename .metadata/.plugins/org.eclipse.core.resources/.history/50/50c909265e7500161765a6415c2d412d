import java.util.*;

public class Principal {

	public static void main(String[] args) 
	{	
		@SuppressWarnings("resource")
		Scanner lerTeclado = new Scanner(System.in);
		Impressao menu = new Impressao();
		Urna urna = new Urna();
		boolean sair=true, sair2=true;

		menu.tipoConta();
		byte selecao = lerTeclado.nextByte();
		
		//---------------------------------------------------------------------------
		while (sair) {
			switch (selecao) 
			{
			case 0: //Encerrar
				System.out.println("------------------------------");
				System.out.print("O programa foi encerrado!");
				sair = false;
				break;
			case 1: //Administrativo
				System.out.print("Digite sua senha:");
				int senhaTemp = lerTeclado.nextInt();
				
				if (urna.checarSenha(senhaTemp)) {
					menu.administrativo();
					byte opcao = lerTeclado.nextByte();
					
					//---------------------------------------------------------------
					while (sair2) {
						switch (opcao) {
						case 0: //Voltar
							menu.tipoConta();
							selecao = lerTeclado.nextByte();
							sair2 = false;
							break;
						case 1: //CadastroCandidato
							ArrayList<Candidato> listaDeCandidatos = new ArrayList<Candidato>();
							System.out.println("----------CADASTRO CANDIDATO----------");
							System.out.print("Nome: ");
							String nome = lerTeclado.nextLine();
							System.out.print("Número de votação: ");
							int votacao = lerTeclado.nextInt();
							
							Candidato c = new Candidato(nome, votacao);
							listaDeCandidatos.add(c);
							System.out.println("\nCandidato cadastrado com sucesso!");
							opcao = 99;
							break;
						case 2: //CadastroEleitor
							ArrayList<Eleitor> listaDeEleitores = new ArrayList<Eleitor>();
							System.out.println("----------CADASTRO ELEITORES----------");
							System.out.print("Nome: ");
							String auxNome = lerTeclado.nextLine();
							System.out.print("ZONA: ");
							int zona = lerTeclado.nextInt();
							System.out.print("SEÇÃO: ");
							int secao = lerTeclado.nextInt();
							
							Eleitor e = new Eleitor(auxNome, zona, secao);
							listaDeEleitores.add(e);
							System.out.println("\nEleitor cadastrado com sucesso!");
							opcao = 99;
							break;
						case 3: //Resultados
							
							break;
						case 99:
							menu.administrativo();
							opcao = lerTeclado.nextByte();
							break;
						default:
							System.out.print("Opção inválida, digite uma opção:");
							opcao = lerTeclado.nextByte();
							break;
						}
					}
					//---------------------------------------------------------------
				}
				else {
					//TODO: Senha invalida.
					menu.senhaInvalida();
					senhaTemp = lerTeclado.nextInt();
					if (senhaTemp == 0)
						selecao = 0;
				}
				break;
			case 2: //Eleitor
				
				break;
				
			default: 
				System.out.print("Opção inválida, digite uma opção:");
				selecao = lerTeclado.nextByte();
				break;
			}
		}
		//---------------------------------------------------------------------------
	}
}